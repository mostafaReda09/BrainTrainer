<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mostafa.braintrainer.MainActivity">


    <Button
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_green_light"
        android:padding="40dp"
        android:text="Go!"
        android:textSize="100sp"
        android:visibility="visible" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mostafa.braintrainer.MainActivity"
        android:id="@+id/relative_layout"
        android:visibility="invisible">
    <TextView
        android:id="@+id/timer_tectview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/number_of_points"
        android:layout_marginStart="14dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:text="30s"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/number_of_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:text="0/0"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/sum_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/timer_tectview"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="14+15"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sum_textview"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/choise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_dark"

            android:padding="8dp"
            android:tag="0"
            android:text="3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/choise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_green_light"

            android:tag="1"
            android:text="3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/choise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_orange_light"

            android:padding="8dp"
            android:tag="2"
            android:text="3"
            android:textSize="60sp" />

        <Button
            android:id="@+id/choise4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_purple"

            android:tag="3"
            android:text="3"
            android:textSize="60sp" />

    </GridLayout>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="50sp"
        android:layout_below="@+id/gridLayout" />

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:textSize="30sp"
        android:layout_below="@+id/result_text_view"
        android:layout_toEndOf="@+id/timer_tectview"
        android:layout_marginTop="21dp"
        android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>
